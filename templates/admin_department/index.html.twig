{% extends 'base-backend.html.twig' %}

{% block title %}Departements index{% endblock %}

{% block body %}
{% for label, messages in app.flashes() %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">
            {{ message }}
        </div>
        {% endfor %}
{% endfor %}

<div class="d-flex flex-wrap justify-content-between align-items-center">
    <h1>Liste des Départements</h1>
    <a href="{{ path('app_admin_department_new') }}"class="btn btn-success"><i class="align-middle" data-feather="plus"></i></a> 
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Département</th>
                <th>Code Département</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for department in departments %}
            <tr>
                <td>{{ department.id }}</td>
                <td>{{ department.nameDepartment }}</td>
                <td>{{ department.codeDepartment }}</td>
                <td class="text-end">
                    <a href="{{ path('app_admin_department_show', {'id': department.id}) }}" class="btn btn-warning"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_department_edit', {'id': department.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun département n'est renseigné</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
