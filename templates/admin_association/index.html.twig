{% extends 'base.html.twig' %}

{% block title %}Association index{% endblock %}

{% block body %}
    <h1>Association index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NameAsso</th>
                <th>DescriptionAsso</th>
                <th>WebsiteUrl</th>
                <th>ImageNameAsso</th>
                <th>PhoneNumberAsso</th>
                <th>EmailAsso</th>
                <th>SlugAsso</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for association in associations %}
            <tr>
                <td>{{ association.id }}</td>
                <td>{{ association.nameAsso }}</td>
                <td>{{ association.descriptionAsso }}</td>
                <td>{{ association.websiteUrl }}</td>
                <td>{{ association.imageNameAsso }}</td>
                <td>{{ association.phoneNumberAsso }}</td>
                <td>{{ association.emailAsso }}</td>
                <td>{{ association.slugAsso }}</td>
                <td>
                    <a href="{{ path('app_admin_association_show', {'id': association.id}) }}">show</a>
                    <a href="{{ path('app_admin_association_edit', {'id': association.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_association_new') }}">Create new</a>
{% endblock %}
