{% extends 'base-backend.html.twig' %}

{% block title %}Association{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_association_index') }}" class="btn btn-dark">Retour</a>
    <h1>Association</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ association.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ association.nameAsso }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ association.descriptionAsso }}</td>
            </tr>
            <tr>
                <th>Site Web</th>
                <td>{{ association.websiteUrl }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ association.phoneNumberAsso }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ association.emailAsso }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ association.slugAsso }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ association.imageFile }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_association_edit', {'id': association.id}) }}" class="btn btn-success">Modifier</a>

    {{ include('admin_association/_delete_form.html.twig') }}
{% endblock %}
