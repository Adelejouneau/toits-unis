{% extends 'base.html.twig' %}
{% block title %}Contact
{% endblock %}
{% block body %}
	{# h-100 class css bootstrap pour height 100% #}
	<div class="h-100 m-2">
		<div class="row">
			<div class="col-sm-5 col-md-6 " style="text-align:center">
			{# Google maps intégré #}
				<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.411929779011!2d2.386572075258653!3d48.869423299931654!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66dec95f16a43%3A0x9dce95c1a3524b8e!2s15%20Rue%20Henri%20Chevreau%2C%2075020%20Paris!5e0!3m2!1sfr!2sfr!4v1686927668321!5m2!1sfr!2sfr" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" class="googlemaps"></iframe>
				<div class="adresse-toitsunis">
				<p>Nous sommes joignables
					<br>par téléphone au 01.77.32.56.61
					<br>ainsi que par email à
					<a href="mailto:contact@toitsunis.org">contact@toitsunis.org</a>
				</p>
				<p>Toits unis
					<br>15 rue Henri Chevreau
															75020 Paris</p>
				</div>
			</div>
			{# Formulaire contact #}
			<div class="col-sm-5 offset-sm-2 col-md-6 offset-md-0">
				<div id="contact-title" style="text-align:center">
					<h2>Formulaire de contact</h2>
				</div><br>
				<p>
					<label for="exampleFormControlInput1" class="form-label">
						<strong>NOM Prénom <span class="obélix">*</span></strong>
					</label>
				</p>
				<input type="email" class="form-control" id="contact-form" placeholder="NOM Prénom" required><br>
				<p>
					<label for="emailpgcontact" class="form-label">
						<strong>Email <span class="obélix">*</span></strong>
					</label>
				</p>
				<input type="email" class="form-control" id="contact-form" placeholder="myemail@goodlife.com" required><br>
				<p>
					<label for="exampleFormControlInput1" class="form-label">
						<strong>Téléphone</strong>
					</label>
				</p>
				<input type="email" class="form-control" id="contact-form" placeholder="0102030405"><br>
				<label for="exampleFormControlTextarea1" class="form-label">
					<strong>A quel sujet vous nous contactez ?</strong>
				</label>
				<textarea class="form-control" id="contact-form" rows="3" placeholder="Votre message..."></textarea><br>
				<div class="form-check">
					<p>
						<strong>RGPD <span class="obélix">*</span></strong>
					</p>
					{# checkbox #}
					<input class="contact-form-check-input" type="checkbox" id="flexCheckDefault">
					<label class="form-check-label" for="flexCheckDefault">
						J'ai lu et j'accepte la politique de confidentialité.
					</label>
					<div class="astérix">
					<br>
					<p><span class="obélix">*</span> L'astérisque indique les champs nécessaires.</p>
					</div>
					<div class="col-sm-5 offset-sm-2 col-md-6 offset-md-0" style="text-align:center"><br>
							<input id="btncontact" class="btn btn-primary" type="submit" value="Envoyer">
					</div>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
