                <!-- à changer pour mettre le lien vers le profil -->
                <a class="nav-link d-flex flex-column align-items-center" href="{{ path('app_profil')}}"><i data-feather="user"></i></a>
                {% else %}
                <a class="nav-link d-flex flex-column align-items-center" href="{{ path('app_login')}}"><i data-feather="user"></i></a>
                {% endif %}
            </li>
        </ul>
        </div>
