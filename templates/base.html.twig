<body>
    {# debut de la navbar #}
    <nav class="navbar navbar-expand-xl navbar-light text-center" style="background-color:  #124367; color: #FFF0BD;">
        <div class="container-fluid d-flex align-items-center">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav d-flex mx-auto align-items-center justify-content-around w-100">
                    <li class="nav-item mx-3 nav_logo">
                        <a class="nav-link d-flex flex-column align-items-center color-logo" aria-current="page" href="{{ path('app_home') }}">
                            <img src="/images/logo.png" alt="Logo" width="100" height="100">
                        </a>
                        <h3>ToitsUnis</h3>
                    </li>
                    <li class="nav-item mx-3">
                        <a class="nav-link d-flex flex-column align-items-center navbarColor" aria-current="page" href="{{path('app_contact') }}">Contact</a>
                    </li>
                    <li class="nav-item mx-3">
                        <a class="nav-link d-flex flex-column align-items-center navbarColor" aria-current="page" href="{{path('app_comment_ca_marche_host') }}">Devenir hôte solidaire</a>
                    </li>
                    <li class="nav-item mx-3">
                        <a class="nav-link d-flex flex-column align-items-center navbarColor" aria-current="page" href="{{path('app_qui_sommes_nous') }}">Qui sommes-nous ?</a>
                    </li>
                        {% if app.user %}
                            {% if 'ROLE_USER' in app.user.roles %}
                            <li>
                                <a class="nav-link navbarColor" href="{{ path('app_lodging') }}">Logements</a>
                            </li> 
                            <li>   
                                <a class="nav-link navbarColor" href="{{ path('app_compte_asso') }}">Mon compte</a>
                            </li>
                            {% elseif 'ROLE_ADMIN' in app.user.roles %}
                            <li>
                                <a class="nav-link navbarColor" href="{{ path('app_admin') }}">Admin</a>
                            </li>    
                            {% endif %}
                            <li>
                                <a class="nav-link navbarColor" href="{{ path('app_logout') }}">Déconnexion</a>
                            </li>
                        {% else %}
                        <li>
                            <a class="nav-link navbarColor" href="{{ path('app_login') }}">Connexion</a>
                        
                        </li>
                            {% endif %}
                            {% if 'ROLE_ADMIN' in app.user.roles %}
                            <li>
                                <a class="nav-link navbarColor" href="{{ path('app_admin') }}">Admin</a>
                            </li> 
                        {% endif %}
                </ul>
            </div>
        </div>
    </nav>


            {% block body %}{% endblock %}



