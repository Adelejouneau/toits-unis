{% extends 'base-backend.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
{% for label, messages in app.flashes() %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">
            {{ message }}
        </div>
        {% endfor %}
{% endfor %}
    <div class="d-flex flex-wrap justify-content-between align-items-center">
    <h1>Catégorie</h1>
    <a href="{{ path('app_admin_category_new') }}"class="btn btn-success"><i class="align-middle" data-feather="plus"></i></a> 
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Mis à jour</th>
                <th>Slug</th>
                <th class="text-end">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.nameCat }}</td>
                <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ category.slugCat }}</td>
                <td class="text-end">
                    <a href="{{ path('app_admin_category_show', {'id': category.id}) }}"class="btn btn-warning"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}"class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune catégorie n'a été rensignée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
