{% extends 'base.html.twig' %}
{% block title %}Lodging!{% endblock %}
{% block body %}

<div class=" container-lg py-4 ">

    <h1 class="my-5 text-center"><i data-feather="film"></i> Nos derniers logements <i data-feather="film"></i></h1>

    {# <div class="row col-6" id="filtre-departement">
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
    </div> #}

    {# <div class="row " id="filtre-departement"> #}
        <div class="col">
            {{ form_start(form) }}
            {{ form_row(form.department) }}
        </div>
        <div class="col">
            {{ form_row(form) }}
            <!-- Ajoutez les autres champs du formulaire de la même manière -->
            {{ form_end(form) }}
        </div>



        

        <div class="row d-flex justify-content-center">
            {% for lodging in lodgings %}
            <div class="col-12 col-md-4 mb-3">
                <div class="card shadow text-center  box">
                    <div class="position-relative">
                        {% if lodging.imageNameLod is defined and lodging.imageNameLod is not null %}
                        <img src="{{ asset('/images/lodgings/' ~ lodging.imageNameLod) }}" class="card-img-top" alt="{{ lodging.titleLod }}">
                        {% else %}
                        <img src="{{ asset('/images/lodgings/placeholder.png') }}" class="img-fluid" alt="{{ lodging.titleLod }}">
                        {% endif %}
                        {# {% if lodging not in app.user.lodgings %}
                            <a href="{{ path('app_favori', {id:lodging.id}) }}" class="btn btn-light rounded-circle position-absolute bottom-0 end-0 p-1 m-2">
                                <i data-feather="star" class="text-danger"></i>
                            </a>
                        {% else %}
                            <a href="{{ path('remove_lodging', {id:lodging.id}) }}" class="btn btn-danger rounded-circle position-absolute bottom-0 end-0 p-1 m-2">
                                <i data-feather="star" class="text-light"></i>
                            </a>
                        {% endif %} #}T
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ lodging.titleLod }}</h5>

                        <a href="{{ path('app_lodging_show', {slugLod:lodging.slugLod }) }}" class="btn btn-primary ">voir plus </a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
</div>
{% endblock %}

