{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>
    <a href="{{ path('app_admin_comment_index') }}" class="btn btn-dark mb-3">Retour</a>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ comment.updatedAt ? comment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DescriptionComment</th>
                <td>{{ comment.descriptionComment }}</td>
            </tr>
        </tbody>
    </table>

   
<a href="{{ path('app_admin_comment_edit', {'id': comment.id}) }}" class="btn btn-success">Modifier</a>

    {{ include('admin_comment/_delete_form.html.twig') }}
{% endblock %}